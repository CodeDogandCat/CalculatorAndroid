<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2"
    > 
    <!-- 结果显示框 -->

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:background="@null"
        android:cursorVisible="false"
        android:editable="false"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="36dip" 
        android:gravity="right"
        />

    <!-- 接下去采TableRow的格式进行布局设计 -->
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         
         >
           
             <!-- 显示当前是角度还是弧度，默认是角度 -->
            <TextView android:id="@+id/_drg"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="   DEG"   
                android:textSize="18dip"              
                android:background="#00000000"
                android:textColor="#ffffff"/>
            
             <!-- 用于显示存储结果 -->
          <!--  <TextView android:id="@+id/M"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:text="  MEM :"                 
                android:textColor="#ffffff"
                 android:layout_marginLeft="120dip"
                 android:textSize="16dip"/>-->
                 
            <!-- 默认显示字符串0 -->
            <TextView android:id="@+id/mem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0"                      
                android:textColor="#ffffff"
                android:textSize="18dip"
                android:gravity="bottom" 
                android:singleLine="true"
                android:layout_marginLeft="0dip"/> 
    </TableRow>  
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="#00000000"
         android:layout_marginTop="15dip">  
          <!-- 转换角度弧度-->
          <Button
            android:id="@+id/drg"
            android:layout_width="53sp"
            android:layout_height="wrap_content"            android:textSize="0sp" 
            android:text="DRG" 
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dip"/>  
            
           <!-- 自然对数 -->
            <Button android:id="@+id/ln"
             android:text="ln"
             android:textSize="0sp" 
                android:layout_width="53sp" 
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="40dip"/>  
            <!-- 对数 -->     
            <Button android:id="@+id/log"
             android:text="log"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:textColor="#ffffff"
                android:layout_marginLeft="40dip"/>
           <!-- 退出计算器 -->
            <Button android:id="@+id/exit"
             android:text="exit"
             android:textSize="0sp" 
                android:layout_width="106sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dip"/>        
           
                                                                                                        
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

       

        <Button
            android:id="@+id/sin"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="sin" 
            android:textSize="0sp" 
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dip"/>

        <Button
            android:id="@+id/cos"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="cos"
            android:textSize="0sp" 
            android:background="#00000000" 
            android:textColor="#ffffff"
            android:layout_marginLeft="40dip"/>

        <Button
            android:id="@+id/tan"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="tan" 
            android:textSize="0sp" 
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dip"/>
        
           <!-- 乘方 -->
            <Button android:id="@+id/square"
             android:text="^"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="40dip"/>       
       

       
    </TableRow>
    
     <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
            <!-- 阶乘-->
        <Button
            android:id="@+id/factorial"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="n!" 
            android:textSize="0sp" 
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginLeft="30dip"/>
        <!-- 左括号 -->     
            <Button android:id="@+id/left"
             android:text="("
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:textColor="#ffffff"
                android:layout_marginLeft="40dip"/>
        <!-- 右括号 -->   
        <Button android:id="@+id/right"
         android:text=")"
         android:textSize="0sp" 
            android:layout_width="53sp"
            android:layout_height="wrap_content" 
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dip"/>  

         
        <!-- 清除存储结果 -->
        <Button android:id="@+id/mc"
            android:text="MC"
            android:textSize="0sp" 
            android:layout_width="106sp"
            android:layout_height="wrap_content"   
            android:background="#00000000"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dip"/>
       
    </TableRow>

                  
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="40dip"
         >  
            <!-- 数字7 -->
            <Button android:id="@+id/seven"
             android:text="7"
             android:textSize="0sp" 
                android:layout_width="53sp" 
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="18dip"/>
            <!-- 数字8 -->
            <Button android:id="@+id/eight"
             android:text="8"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dip"/>    
            <!-- 数字9 -->
            <Button android:id="@+id/nine"
             android:text="9"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dip"/>    
            <!-- 除号 -->
            <Button android:id="@+id/divide"
             android:text="÷"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:textColor="#ffffff"
                android:layout_marginLeft="25dip"/>
             <!-- 清除输出窗口的所有内容 -->
            <Button android:id="@+id/c"
             android:text="C"
             android:textSize="0sp" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"  
                android:background="#00000000" 
                android:textColor="#ffffff"
                android:layout_marginLeft="10dip"/>      
                                                                                                    
    </TableRow>        
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dip">  
            <!-- 数字4 -->
            <Button android:id="@+id/four"
             android:text="4"
             android:textSize="0sp" 
                android:layout_width="53sp" 
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="18dip"/>
            <!-- 数字5 -->
            <Button android:id="@+id/five"
             android:text="5"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
            <!-- 数字6 -->    
            <Button android:id="@+id/six"
             android:text="6"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
            <!-- 乘号 -->    
            <Button android:id="@+id/mul"
             android:text="×"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
            
            <!-- 退格 --> 
             <Button
            android:id="@+id/bksp"
            android:layout_width="53sp"
            android:layout_height="wrap_content"
            android:text="Bksp" 
            android:textSize="0sp" 
            android:background="#00000000"
            android:textColor="#ffffff"
             android:layout_marginLeft="15dip"/>
            
                                                                                                                 
    </TableRow>            
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dip">
            <!-- 数字1 -->   
            <Button android:id="@+id/one"
             android:text="1"
             android:textSize="0sp" 
                android:layout_width="53sp" 
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textColor="#ffffff" 
                android:layout_marginLeft="18dip"/>
            <!-- 数字2 -->
            <Button android:id="@+id/two"
             android:text="2"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
            <!-- 数字3 -->    
            <Button android:id="@+id/three"
             android:text="3"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
            <!-- 减号 -->    
            <Button android:id="@+id/sub"
             android:text="-"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content"
                android:background="#00000000" 
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
           <!-- 开方 -->  
            <Button android:id="@+id/sqrt"
             android:text="√"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="wrap_content" 
                android:background="#00000000"
                android:textColor="#ffffff"
                 android:layout_marginLeft="15dip"/>                                                                                             
    </TableRow>         
       <TableLayout 
          android:layout_width="fill_parent"
          android:layout_height="75sp"
       >                      
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="75sp"
        android:layout_marginTop="30dip">
            <!-- 数字0 -->  
            <Button android:id="@+id/zero"
             android:text="0"
             android:textSize="0sp" 
                android:layout_width="53sp" 
                android:layout_height="75sp" 
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dip"/>
            <!-- 小数点 -->
            <Button android:id="@+id/dot"
             android:text="."
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="75sp" 
                android:background="#00000000"
                android:textColor="#ffffff"
                 android:layout_marginLeft="25dip"/>
           
            <!-- 加号 -->     
            <Button android:id="@+id/add"
             android:text="+"
             android:textSize="0sp" 
                android:layout_width="53sp"
                android:layout_height="75sp" 
               android:background="#00000000"
                android:textColor="#ffffff"
                 android:layout_marginLeft="95dip"/>
             <!-- 等号 -->
            <Button android:id="@+id/equal"
             android:text="="
             android:textSize="0sp" 
                android:layout_width="53sp"
               android:layout_height="75sp"  
                android:background="#00000000"
                android:textColor="#ffffff"
                android:layout_marginLeft="20dip"/>                                                                                                 
    </TableRow>  
    </TableLayout>    
    <TableRow
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="#00000000">
            <!-- 用于提示，告诉用户如何使用计算器的一些功能等 -->
            <TextView android:id="@+id/T"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:text="Tips:"  
                android:textSize="0sp"                
                android:textColor="#ffffff"/>
            <TextView android:id="@+id/tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" 
                android:textSize="0sp"                 /> 
    </TableRow>     
</LinearLayout>

